<form class="mt-4" method="POST" action="/course/action-hbs">
    <h3>Danh sách khoá học đã xoá</h3>
    <a href="/me/stored/courses">Danh sách khoá học</a>

    <div class="mt-4 d-flex align-items-center">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
            <label class="form-check-label" for="checkbox-all">
                Chon tat ca
            </label>
        </div>
        <select class="form-select form-control-sm checkbox-select-all-option" name="action" aria-label="Default select example" required>
            <option selected value="">Chon hanh dong</option>
            <option value="restores">khoi phuc</option>
            <option value="forceDelete">Xoa vinh vien</option>
        </select>
        <button type="submit" class="btn btn-primary btn-sm btn-checkboxAll disabled">Thuc hien</button>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col" colspan="2">#</th>
            <th scope="col">Tên</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Thời gian tạo</th>
            <th scope="col">Hành động</th>
        </tr>
        </thead>
        <tbody>
        {{#each courses}}
            <tr>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="courseIds[]" value="{{this._id}}">
                    </div>
                </td>
                <td scope="row">{{sum @index 1}}</td>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <!-- Nút khôi phục -->
                    <a href="" class="btn btn-success btn-restore" data-id="{{this._id}}">Khôi phục</a>

                    <!-- Nút xoá vĩnh viễn -->
                    <a href="" class="btn btn-danger" data-id="{{this._id}}"
                       data-bs-toggle="modal" data-bs-target="#delete-course-Modal">
                        Xoá vĩnh viễn
                    </a>
                </td>
            </tr>
        {{else}}
            <tr>
                <td colspan="6" class="text-center">
                    Danh sách xoa học rỗng.
                    <a href="/me/stored/courses">Danh sách khoá học</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</form>

<!-- Modal xác nhận xoá vĩnh viễn -->
<div class="modal fade" id="delete-course-Modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="POST" id="delete-course-form">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xoá vĩnh viễn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xoá vĩnh viễn khoá học này? <br>
                    (Hành động này không thể khôi phục)
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xoá vĩnh viễn</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Form ẩn để khôi phục -->
<form method="POST" name="restore-course-form"></form>

<script>
    const deleteModal = document.getElementById('delete-course-Modal');
    const restoreForm = document.forms['restore-course-form'];
    const restoreButtons = document.querySelectorAll('.btn-restore');
    var checkboxAll = $('#checkbox-all');
    var courseItemCheckbox = $('input[name="courseIds[]"]');
    var btnCheckboxAll = $('.btn-checkboxAll');
    // Xử lý xoá vĩnh viễn
    if (deleteModal) {
        deleteModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const courseId = button.getAttribute('data-id');
            const deleteForm = deleteModal.querySelector('#delete-course-form');
            if (deleteForm) {
                deleteForm.action = `/course/${courseId}/force?_method=DELETE`;
            }
        });
    }

    // Xử lý khôi phục
    restoreButtons.forEach((btn) => {
        btn.addEventListener('click', function (event) {
            event.preventDefault();
            const courseId = this.getAttribute('data-id');
            restoreForm.action = `/course/${courseId}/restore?_method=PATCH`;
            restoreForm.submit();
        });
    });


    // Hàm bật/tắt nút hành động
    function renderCheckboxAllButtonSubmit() {
        var checkCount = $('input[name="courseIds[]"]:checked').length;
        if (checkCount > 0) {
            btnCheckboxAll.removeClass('disabled');
        } else {
            btnCheckboxAll.addClass('disabled');
        }
    }
    // Khi click "chọn tất cả"
    checkboxAll.change(function () {
        var isCheckedAll = $(this).prop('checked');
        courseItemCheckbox.prop('checked', isCheckedAll);

        renderCheckboxAllButtonSubmit();
    });

    // Khi click vào từng checkbox
    courseItemCheckbox.change(function () {
        var isCheckedAll =
                courseItemCheckbox.length === courseItemCheckbox.filter(':checked').length;
        checkboxAll.prop('checked', isCheckedAll);

        renderCheckboxAllButtonSubmit();
    });

    // Gọi khi load trang
    renderCheckboxAllButtonSubmit();
</script>
