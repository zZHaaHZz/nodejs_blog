<form class="mt-4" method="POST" action="/course/action-hbs">
    <h3>Danh sach khoa hoc cua toi</h3>
    <a href="/me/trash/courses">Khoa hoc da xoa [{{deletedCount}}]</a>

    <div class="mt-4 d-flex align-items-center">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
            <label class="form-check-label" for="checkbox-all">
                Chon tat ca
            </label>
        </div>
        <select class="form-select form-control-sm checkbox-select-all-option" name="action" aria-label="Default select example" required>
            <option selected value="">Chon hanh dong</option>
            <option value="delete">Xoa</option>
        </select>
        <button type="submit" class="btn btn-primary btn-sm btn-checkboxAll disabled">Thuc hien</button>
    </div>
    {{_sort.type}}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col" colspan="2">#</th>
            <th scope="col">Ten khoa hoc
                {{{sorttable 'name' _sort}}}
            </th>
            <th scope="col">Mo ta</th>
            <th scope="col">Thoi gian tao
                {{{sorttable 'createdAt' _sort}}}
            </th>
            <th scope="col">Hanh dong</th>
        </tr>
        </thead>
        <tbody>
        {{#each courses}}
        <tr>
            <td>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="courseIds[]" value="{{this._id}}">
                </div>
            </td>
            <td scope="row">{{sum @index 1}}</td>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>{{this.createdAt}}</td>
            <td>
                <a href="/course/{{this._id}}/edit" class="btn btn-success">Sua</a>
                <a href="" class="btn btn-success" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#delete-course-Modal" >Xoa</a>
            </td>
        </tr>
        {{else}}
        <tr>
            <td colspan="6" class="text-center">
                Hien tai khong co khoa hoc nao
                <a href="/course/create">Them khoa hoc</a>
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
</form>

<div class="modal fade" id="delete-course-Modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="POST" id="delete-course-form">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xoá</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Bạn có chắc muốn xoá khoá học này?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xoá</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    const deleteModal = document.getElementById('delete-course-Modal');
    var checkboxAll = $('#checkbox-all');
    var courseItemCheckbox = $('input[name="courseIds[]"]');
    var btnCheckboxAll = $('.btn-checkboxAll');

    // Modal xoá
    if (deleteModal) {
        deleteModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const courseId = button.getAttribute('data-id');
            const deleteForm = deleteModal.querySelector('#delete-course-form');
            if (deleteForm) {
                deleteForm.action = `/course/${courseId}/delete?_method=DELETE`;
            }
        });
    }

    // Hàm bật/tắt nút hành động
    function renderCheckboxAllButtonSubmit() {
        var checkCount = $('input[name="courseIds[]"]:checked').length;
        if (checkCount > 0) {
            btnCheckboxAll.removeClass('disabled');
        } else {
            btnCheckboxAll.addClass('disabled');
        }
    }

    // Khi click "chọn tất cả"
    checkboxAll.change(function () {
        var isCheckedAll = $(this).prop('checked');
        courseItemCheckbox.prop('checked', isCheckedAll);

        renderCheckboxAllButtonSubmit();
    });

    // Khi click vào từng checkbox
    courseItemCheckbox.change(function () {
        var isCheckedAll =
                courseItemCheckbox.length === courseItemCheckbox.filter(':checked').length;
        checkboxAll.prop('checked', isCheckedAll);

        renderCheckboxAllButtonSubmit();
    });

    // Gọi khi load trang
    renderCheckboxAllButtonSubmit();
</script>

